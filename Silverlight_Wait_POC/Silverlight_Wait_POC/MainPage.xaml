<UserControl x:Class="Silverlight_Wait_POC.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="832">

    <Grid x:Name="LayoutRoot" Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="78*" />
            <ColumnDefinition Width="754*" />
        </Grid.ColumnDefinitions>
        <StackPanel>
        <Button Name="btnGo" Content="Go" Click="btnGo_Click" Margin="0,5,0,0" Width="50" Grid.Column="0"/>
            <Button Name="btnSet" Content="Set" Width="50" Margin="0,5,0,0" Click="btnSet_Click"/>
        </StackPanel>
        <ListBox Name="lstOut" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Grid.Column="1"/>
    </Grid>
</UserControl>
